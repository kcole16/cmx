{
    "extends": "standard",
    "rules": {
    	"semi": "off",
		"space-before-function-paren": "off",
		"indent": "off",
		"comma-spacing": "off",
		"no-tabs": "off",
		"no-trailing-spaces": "off",
		"space-infix-ops": "off",
		"camelcase": "off",
		"no-undef": "off",
        "space-before-blocks": "off",
        "spaced-comment": "off",
        "no-multi-spaces": "off",
        "key-spacing": "off",
        "keyword-spacing": "off"
    },
    "installedESLint": true,
    "plugins": [
        "standard",
        "promise",
        "react"
    ]
}